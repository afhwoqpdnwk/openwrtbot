bands() {
case $1 in
    "1")
    echo -e '2100 MHz'
    ;;
    "3")
    echo -e '1800 MHz'
    ;;
    "8")
    echo -e '900 MHz'
    ;;
    "40")
    echo -e '2300 MHz'
    ;;
    esac
}
